<h1>Add New Restaurant</h1>
<div class="container">
  <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.submit %>
  <% end %>
</div>
<br>
<div class="container">
  <%= link_to 'Home', restaurants_path, class:'btn btn-primary' %>
</div>

